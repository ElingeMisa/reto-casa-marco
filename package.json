{
  "name": "marco-museo-app",
  "version": "1.0.0",
  "private": true,
  "description": "AplicaciÃ³n web interactiva para el Museo MARCO",
  "author": "Equipo MARCO",
  "license": "MIT",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "security:audit": "npm audit --production",
    "security:snyk": "snyk test",
    "security:secrets": "gitleaks detect --source . -v",
    "dev": "./start-services.sh",
    "backend:start": "cd backend && npm run dev",
    "backend:prod": "cd backend && npm start",
    "backend:stop": "lsof -ti:5001 | xargs kill -9 2>/dev/null || echo 'Backend no estaba corriendo'",
    "frontend:stop": "lsof -ti:3000 | xargs kill -9 2>/dev/null || echo 'Frontend no estaba corriendo'",
    "stop": "npm run backend:stop && npm run frontend:stop",
    "restart": "npm run stop && npm run start",
    "audit": "./audit.sh baseline",
    "audit:baseline": "./audit.sh baseline",
    "audit:api": "./audit.sh api",
    "audit:full": "./audit.sh full",
    "docker:start": "./docker-start.sh",
    "docker:start:build": "./docker-start.sh --build",
    "docker:stop": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f",
    "docker:audit": "./docker-audit.sh baseline frontend",
    "docker:audit:frontend": "./docker-audit.sh baseline frontend",
    "docker:audit:backend": "./docker-audit.sh baseline backend",
    "docker:audit:full": "./docker-audit.sh full frontend",
    "docker:ps": "docker-compose ps",
    "docker:clean": "./docker-clean.sh",
    "test:functional": "./tests/functional/run-tests.sh all",
    "test:functional:frontend": "./tests/functional/run-tests.sh frontend",
    "test:functional:backend": "./tests/functional/run-tests.sh backend",
    "test:functional:integration": "./tests/functional/run-tests.sh integration",
    "test:functional:coverage": "./tests/functional/run-tests.sh coverage",
    "test:functional:report": "./tests/functional/generate-reports.sh",
    "test:all": "./run-all-tests.sh",
    "verify": "./run-all-tests.sh"
  },
  "dependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "axios": "^1.6.2",
    "jwt-decode": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^3.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsonwebtoken": "^9.0.2",
    "msw": "^2.12.3",
    "prettier": "^3.1.0",
    "snyk": "^1.1275.0",
    "source-map-explorer": "^2.5.3",
    "ts-jest": "^29.4.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
